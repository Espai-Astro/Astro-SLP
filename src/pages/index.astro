---
import Layout from '../layouts/Layout.astro';
import { Presentacio, Info, Caracteristiques, Projectes, Nosaltres } from '../components/inici';

import {
  imatges,
  info,
  projectes,
  caracteristiques,
  nosaltres,
} from '../lib/data/contingutWeb.ts';
---

<Layout titol='Astro SLP'>
  <div class='flex flex-col gap-y-28 md:gap-y-18'>
    <Presentacio imatge={imatges[0]} />
    <Info info={info} imatge={imatges[1]} />
    <Caracteristiques caracteristiques={caracteristiques} />
    <Projectes projectes={projectes} />
    <Nosaltres nosaltres={nosaltres} />
  </div>
</Layout>
