---
import type { caracteristicaT } from '../lib/types';

interface Props {
  caracteristiques: caracteristicaT[];
}
const { caracteristiques } = Astro.props;
---

<section id='caracteristiques' class='flex flex-col gap-12'>
  <h2 class='text-center text-5xl py-4'>Caracter√≠stiques</h2>
  <div class='grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:px-8'>
    {
      caracteristiques.map(({ titol, text }) => (
        <div class='bg-slate-800 rounded-xl p-8'>
          <h4 class='text-2xl font-semibold py-4'>{titol}</h4>
          <p class='text-md font-thin py-2'>{text}</p>
        </div>
      ))
    }
  </div>
</section>
