---
import type { contacteT, xsT } from '../lib/types';
import logo from '../assets/img/logo-preview2.webp';

interface Props {
  contacte: contacteT;
  xxss: xsT[];
}
const { contacte, xxss } = Astro.props;
const { nom, correu, telefon, adreça, codi, poblacio } = contacte;
const imatgeLogo: string = logo.src;
---

<div
  class='w-full bg-slate-800 pt-12 pb-20 px-12 sm:px-16 mt-20 border-t-2 border-b-zinc-400'>
  <div class='flex justify-between lg:place-items-center'>
    <ul
      class='flex flex-col lg:flex-row align-items-start justify-between lg:justify-center place-items-start gap-4 lg:gap-10 font-thin'>
      <li class='text-xl font-semibold'>{nom}</li>
      <div class='flex flex-col text-lg'>
        <li>{correu}</li>
        <li>{telefon}</li>
      </div>
      <div class='flex flex-col gap-1 text-sm lg:pt-1'>
        <li>{adreça}</li>
        <li>
          {codi} - {poblacio}
        </li>
      </div>
    </ul>
    <div
      class='flex flex-col lg:flex-row justify-between lg:justify-center place-items-center lg:place-items-end lg:gap-8'>
      <div class='lg:order-1 flex flex-col'>
        <img class='w-24' src={imatgeLogo} alt='Logo' />
        <h3 class='text-lg font-bold uppercase tracking-wider'>
          Astro <span class='logo font-thin'>SLP</span>
        </h3>
      </div>
      <ul class='flex gap-4 lg:gap-6pb-1 lg:pt-2'>
        {
          xxss.map(({ src, nom }) => (
            <li>
              <a href='#' class='filtre-sky'>
                <img class='w-7 filtre-xs' src={src} alt={nom} title={nom} />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</div>
<div class='text-right m-3'>&copy;llopFilms 2023</div> 

<style>
  .filtre-xs {
    filter: invert(73%) sepia(99%) saturate(7%) hue-rotate(218deg)
      brightness(95%) contrast(97%);
  }

  a:hover {
    filter: invert(77%) sepia(28%) saturate(6519%) hue-rotate(166deg)
      brightness(100%) contrast(95%);
  }
</style>
