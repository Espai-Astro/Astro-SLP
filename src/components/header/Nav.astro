---
import type { enllaçT } from '../../lib/types';

interface Props {
  enllaços: enllaçT[];
}
const { enllaços } = Astro.props;
---

<nav id='nav'>
  <ul
    class='flex flex-row flex-wrap gap-y-4 gap-x-4 sm:gap-x-8 md:gap-x-20 xl:gap-x-24 lg:-ms-60 justify-center p-6 sm:px-20 text-xl text-zinc-50 capitalize'>
    {
      enllaços.map(({ url, nom }) => (
        <li class='tracking-wide cursor-pointer hover:text-sky-400 border-b-2 border-transparent hover:border-sky-400 hover:-translate-y-1'>
          {' '}
          <a href={`#${url}`}>{nom}</a>
        </li>
      ))
    }
  </ul>
</nav>
