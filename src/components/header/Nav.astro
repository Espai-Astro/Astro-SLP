---
import type { enllaçT } from '../../lib/types';

interface Props {
  enllaços: enllaçT[];
}
const { enllaços } = Astro.props;
---

<nav id='nav'>
  <ul
    class='lg:-ml-40 flex flex-row flex-wrap gap-y-2 gap-x-12 sm:gap-x-7 md:gap-x-16 lg:gap-x-20 xl:gap-x-28 justify-center px-2 py-4 text-xl text-zinc-50 capitalize'>
    {
      enllaços.map(({ url, nom }) => (
        <li class='tracking-wide cursor-pointer hover:text-sky-400 border-b-2 border-transparent hover:border-sky-400 hover:-translate-y-1'>
          {' '}
          <a href={`#${url}`}>{nom}</a>
        </li>
      ))
    }
  </ul>
</nav>
