---
import logo from '../../assets/img/logo-preview2.webp';
import { Nav } from './';
import type { enllaçT } from '../../lib/types';

interface Props {
  enllaços: enllaçT[];
}
const imatgeLogo: string = logo.src;
const { enllaços } = Astro.props;
---

<div
  class='fixed inset-x-0 top-0 bg-slate-800 p-4
border-b-2 border-b-zinc-400 flex flex-col lg:flex-row'>
  <div class='mx-auto'>
    <img class='w-60' src={imatgeLogo} alt='Logo' />
  </div>
  <div class='flex-1 flex flex-col justify-center gap-2'>
    <h1
      class='text-center text-6xl py-4 font-bold lg:-ms-44 uppercase tracking-wide'>
      Astro <span class='logo font-extralight'>SLP</span>
    </h1>
    <Nav enllaços={enllaços} />
  </div>
</div>
